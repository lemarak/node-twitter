extends ../layout.pug

block content
    div(class="d-flex flex-row justify-content-center content mx-auto")
        form(class="card" method="post" action="/auth/signin")
            div(class="card-header") Connexion
            div(class="card-body")
                div(class="form-group")
                    label Email
                    input(class="form-control" type="email" name="email")
                    label Mot de passe
                    input(class="form-control" type="password" name="password")
                if errors 
                    ul(class="my-2")
                        each error in errors 
                            li(class="text-danger")=error
                div(class="w-100")
                    input(type="submit" value="connexion" class="btn btn-primary ml-auto d-block")
